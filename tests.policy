/**
 * The purpose of this file is to forbid non-localhost network access from our
 * tests. The other permissions are the minimum required to get sbt to start,
 * do a clean compile, and run-tests. If you need to add any more permissions,
 * you can find the full list here:
 *   http://download.oracle.com/javase/1.4.2/docs/guide/security/permissions.html
 */

grant {
  permission java.net.SocketPermission "localhost", "connect,accept,resolve,listen";
  permission java.net.SocketPermission "api.localhost", "connect,accept,resolve,listen";
  permission java.io.FilePermission "<<ALL FILES>>", "read, write, execute, delete";
  permission java.util.PropertyPermission "*", "read, write";
  permission java.lang.RuntimePermission "*";
  permission java.lang.reflect.ReflectPermission "suppressAccessChecks";
  permission java.util.logging.LoggingPermission "control";
  permission java.net.NetPermission "*";
};
