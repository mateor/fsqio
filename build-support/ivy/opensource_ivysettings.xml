<ivysettings>

  <settings defaultResolver="chain-repos"/>

  <property name="m2.repo.relpath" value="[organisation]/[module]/[revision]"/>
  <property name="m2.repo.pom" value="${m2.repo.relpath}/[module]-[revision].pom"/>
  <property name="m2.repo.artifact"
            value="${m2.repo.relpath}/[artifact](-[classifier])-[revision].[ext]"/>
  <property name="m2.repo.dir" value="${user.home}/.m2/repository" override="false"/>

  <resolvers>

    <chain name="chain-repos" returnFirst="true">


      <ibiblio name="osgeo"
               m2compatible="true"
               usepoms="true"
               root="http://download.osgeo.org/webdav/geotools"
               pattern="[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"
               />

      <ibiblio name="maven-central" m2compatible="true" descriptor="required"/>

      <ibiblio name="maven.twttr.com"
               m2compatible="true"
               usepoms="true"
               root="https://maven.twttr.com"
               pattern="[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"
               />

      <ibiblio name="bintray-jnegre"
               m2compatible="true"
               usepoms="true"
               root="https://bintray.com/artifact/download/jnegre/maven"
               pattern="[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"
               />

      <ibiblio name="conjars.org"
               m2compatible="true"
               usepoms="true"
               root="http://conjars.org/repo"
               pattern="[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"
               />

      <ibiblio name="clojars.org"
               m2compatible="true"
               usepoms="true"
               root="http://clojars.org/repo"
               pattern="[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"
               />


      <!-- The mvn standard local filesystem repo/cache -->
      <filesystem name="local.m2" m2compatible="true" local="true" checkmodified="true">
        <ivy pattern="${m2.repo.dir}/${m2.repo.pom}"/>
        <artifact pattern="${m2.repo.dir}/${m2.repo.artifact}"/>
      </filesystem>

    </chain>
  </resolvers>
  <caches default="default" lockStrategy="no-lock" useOrigin="true">
    <cache name="default" basedir="${ivy.cache.dir}" useOrigin="true" defaultTTL="8h"
      artifactPattern="[orgPath]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"
      ivyPattern="[orgPath]/[module]/[revision]/ivy-[revision].xml">
      <ttl revision="latest.integration" duration="0ms" />
    </cache>
  </caches>

</ivysettings>
